---
export interface Props {
  title: string;
  description: string;
  icon: string;
}

const {title, description, icon} = Astro.props as Props;
---

<div class="card bg-clip-text hover:text-transparent hover:bg-gradient-to-r from-primary-focus to-secondary">
  <div class="card-body text-center">
    <span class={`lnr ${icon} text-center text-2xl`}></span>
    <h4 class="font-bold text-lg text-center">{title}</h4>
    <p class="font-light opacity-70 text-center"> {description} </p>
  </div>
</div>
