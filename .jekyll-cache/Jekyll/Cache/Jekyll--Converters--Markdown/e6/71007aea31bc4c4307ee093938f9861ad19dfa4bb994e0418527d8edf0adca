<h2 id="pins">Pins</h2>

<table>
  <thead>
    <tr>
      <th>Arduino Zero</th>
      <th>Waveshare E-Ink module</th>
      <th>SAMD21G</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>D7</td>
      <td>BUSY</td>
      <td>PA21</td>
    </tr>
    <tr>
      <td>D8</td>
      <td>RST</td>
      <td>PA06</td>
    </tr>
    <tr>
      <td>D9</td>
      <td>DC</td>
      <td>PA07</td>
    </tr>
    <tr>
      <td>D10</td>
      <td>CS</td>
      <td>PA18</td>
    </tr>
    <tr>
      <td>CLK</td>
      <td>SCK on ICSP connector</td>
      <td>PB11</td>
    </tr>
    <tr>
      <td>DIN</td>
      <td>COPI on ISCP connector</td>
      <td>PB10</td>
    </tr>
  </tbody>
</table>

